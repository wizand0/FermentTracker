<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/batchList">

    <fragment
        android:id="@+id/batchList"
        android:name="ru.wizand.fermenttracker.ui.batches.BatchListFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_batchList_to_createBatch"
            app:destination="@id/createBatch" />
        <action
            android:id="@+id/action_batchList_to_batchDetail"
            app:destination="@id/batchDetail" />
    </fragment>

    <fragment
        android:id="@+id/createBatch"
        android:name="ru.wizand.fermenttracker.ui.batches.CreateBatchFragment"
        android:label="@string/title_create_batch" >
        <action
            android:id="@+id/action_createBatch_to_batchList"
            app:destination="@id/batchList"
            app:popUpTo="@id/batchList"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/batchDetail"
        android:name="ru.wizand.fermenttracker.ui.batches.BatchDetailFragment"
        android:label="@string/title_batch_detail" >
        <argument
            android:name="batchId"
            app:argType="string" />
        <!-- Action to QR fragment -->
        <action
            android:id="@+id/action_batchDetail_to_qrFragment"
            app:destination="@id/qrFragment" />
    </fragment>

    <fragment
        android:id="@+id/qrFragment"
        android:name="ru.wizand.fermenttracker.ui.batches.QRFragment"
        android:label="@string/title_qr">
        <argument
            android:name="batchId"
            app:argType="string" />
    </fragment>

</navigation>
