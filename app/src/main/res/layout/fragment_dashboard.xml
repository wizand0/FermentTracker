<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/tvDashboardTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_title"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Карточка 1: Активные партии -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardActiveBatches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle"
                app:layout_constraintEnd_toStartOf="@+id/cardCompletedStages"
                app:layout_constraintHorizontal_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/tvActiveBatchesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active_batches"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvActiveBatchesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="0"
                        android:textAppearance="?attr/textAppearanceHeadline4"
                        android:textStyle="bold"
                        tools:text="5" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка 2: Завершённые этапы за неделю -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCompletedStages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toEndOf="@+id/cardActiveBatches"
                app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/tvCompletedStagesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/completed_stages_week"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvCompletedStagesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="0"
                        android:textAppearance="?attr/textAppearanceHeadline4"
                        android:textStyle="bold"
                        tools:text="12" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка 3: Средняя потеря веса -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAvgWeightLoss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardActiveBatches"
                app:layout_constraintEnd_toStartOf="@+id/cardNextEvent"
                app:layout_constraintHorizontal_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/tvAvgWeightLossLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_weight_loss"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvAvgWeightLossValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="0%"
                        android:textAppearance="?attr/textAppearanceHeadline4"
                        android:textStyle="bold"
                        tools:text="12.5%" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка 4: Ближайшее событие -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNextEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeWidth="0dp"
                app:layout_constraintStart_toEndOf="@+id/cardAvgWeightLoss"
                app:layout_constraintTop_toBottomOf="@id/cardCompletedStages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:id="@+id/tvNextEventLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_event"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvNextEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Сушка колбасы" />

                    <TextView
                        android:id="@+id/tvNextEventTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceCaption"
                        tools:text="Через 2 дня" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Заголовок для уведомлений -->
            <TextView
                android:id="@+id/tvNotificationsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/recent_notifications"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAvgWeightLoss"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- RecyclerView для уведомлений -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNotifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNotificationsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_notification" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>