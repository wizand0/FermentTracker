<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Stage Name -->
        <TextView
            android:id="@+id/tvStageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Fermentation" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvStageName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="48 h" />

        <!-- Current Weight --> <!-- Removed: now batch-level -->
        <!-- <TextView
            android:id="@+id/tvCurrentWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDuration"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="Weight: N/A" /> -->

        <!-- Planned Start Time -->
        <EditText
            android:id="@+id/etDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Duration (hours)"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/btnStartStage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPlannedStartTime"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentWeight"
            tools:text="48 h" />

        <TextView
            android:id="@+id/tvPlannedStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvDuration"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="Planned Start: 2025-09-24 10:00" />

        <!-- Planned End Time -->
        <TextView
            android:id="@+id/tvPlannedEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPlannedStartTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            tools:text="Planned End: 2025-09-26 10:00" />

        <!-- Start Time -->
        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPlannedEndTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="Start: Not started" />

        <!-- End Time -->
        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            tools:text="End: Ongoing" />

        <!-- Time Left -->
        <TextView
            android:id="@+id/tvTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvEndTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="Time Left: 24 h" />

        <TextView
            android:id="@+id/tvCurrentWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            app:layout_constraintBottom_toBottomOf="@+id/tvStageName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvStageName"
            app:layout_constraintTop_toTopOf="@+id/tvStageName"
            tools:text="Current Weight" />



        <!-- Remove Stage Button (for EditableStageAdapter) -->
        <Button
            android:id="@+id/btnRemoveStage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            app:layout_constraintTop_toBottomOf="@id/tvTimeLeft"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="gone" />


        <Button
            android:id="@+id/btnStartStage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            app:layout_constraintBottom_toTopOf="@+id/btnCompleteStage"
            app:layout_constraintEnd_toEndOf="@+id/btnCompleteStage"
            app:layout_constraintStart_toStartOf="@+id/btnCompleteStage" />

        <Button
            android:id="@+id/btnCompleteStage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvTimeLeft" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>