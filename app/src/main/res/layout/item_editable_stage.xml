<?xml version="1.0" encoding="utf-8"?>
<!-- Новый корневой элемент: FrameLayout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/semi_transparent_light_bg"> <!-- Установите желаемый полупрозрачный фон -->

    <!-- CardView теперь внутри FrameLayout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Stage Name -->
            <EditText
                android:id="@+id/etStageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/stage_name"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:imeOptions="actionDone"
                tools:text="Fermentation" />

            <!-- Current Weight -->
            <TextView
                android:id="@+id/tvCurrentWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                app:layout_constraintBaseline_toBaselineOf="@id/etStageName"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Weight: 1500 g" />

            <!-- Duration label -->
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etStageName"
                app:layout_constraintBaseline_toBaselineOf="@id/tilDuration"
                tools:text="Duration:" />

            <!-- Duration Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hours"
                app:layout_constraintStart_toEndOf="@id/tvDuration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etStageName"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    tools:text="48" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Planned Start Time -->
            <TextView
                android:id="@+id/tvPlannedStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilDuration"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Planned Start: 2025-09-24 10:00" />

            <!-- Planned End Time -->
            <TextView
                android:id="@+id/tvPlannedEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPlannedStartTime"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Planned End: 2025-09-26 10:00" />

            <!-- Start Time -->
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPlannedEndTime"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Start: Not started" />

            <!-- End Time -->
            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvStartTime"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="End: Ongoing" />

            <!-- Time Left -->
            <TextView
                android:id="@+id/tvTimeLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEndTime"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Time Left: 24 h" />

            <!-- Buttons in horizontal chain -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartStage"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnCompleteStage"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTimeLeft" />

            <!-- Complete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteStage"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/complete"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/btnStartStage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnStartStage"
                app:layout_constraintTop_toTopOf="@+id/btnStartStage" />

            <!-- Remove Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemoveStage"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnCompleteStage"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>