<?xml version="1.0" encoding="utf-8"?>
<!-- Новый корневой элемент: FrameLayout -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- ScrollView теперь внутри FrameLayout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Карточка информации -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvBatchName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/currentStageName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/timeLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvBatchStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvInitialWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/initial_weight_n_a" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notes -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- QR -->
<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="QR Code"-->
<!--                android:layout_marginTop="12dp">-->

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/etQrCode"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content" />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->

            <!-- RecyclerView stages -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvLogsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/journal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveBatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_batch"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_marginTop="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_photo"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_weight"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/export_to_pdf"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrintLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/print_label"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="8dp" />

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/btnAddStage"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Add Stage"-->
<!--                style="@style/Widget.Material3.Button.OutlinedButton"-->
<!--                android:layout_marginTop="8dp" />-->

<!--            <Button-->
<!--                android:id="@+id/btnTestNotification"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="🔔 Test Notification (10s)"-->
<!--                android:backgroundTint="@android:color/holo_orange_dark" />-->

        </LinearLayout>
    </ScrollView>
</FrameLayout>