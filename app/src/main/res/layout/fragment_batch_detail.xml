<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.batches.BatchDetailFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Batch Name -->
            <TextView
                android:id="@+id/tvBatchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Batch Name" />

            <!-- Product Type -->
            <TextView
                android:id="@+id/tvProductType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/tvBatchName"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Product Type" />

            <!-- Batch Start Date -->
            <TextView
                android:id="@+id/tvBatchStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvProductType"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                tools:text="Start Date: 2025-09-24" />

            <!-- Current Stage Section -->
            <TextView
                android:id="@+id/currentStageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Stage:"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvBatchStartDate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/currentStageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/currentStageLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                tools:text="Fermentation" />

            <TextView
                android:id="@+id/timeLeftLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Left:"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/currentStageName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/timeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/timeLeftLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"
                tools:text="3 days, 12 hours" />

            <!-- Stages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/timeLeft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- Optional: Export Button -->
            <Button
                android:id="@+id/btnExportPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export to PDF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>