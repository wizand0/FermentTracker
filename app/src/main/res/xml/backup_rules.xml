<?xml version="1.0" encoding="utf-8"?>
<full-backup-content xmlns:tools="http://schemas.android.com/tools">
    <!-- Исключаем чувствительные данные -->
    <exclude domain="database" path="." />
    <exclude domain="sharedpref" path="user_prefs.xml" />
    <exclude domain="sharedpref" path="auth.xml" />
    <exclude domain="cache" path="."
        tools:ignore="FullBackupContent" />

    <!-- Если есть безопасные настройки, можно включить выборочно -->
    <!-- <include domain="sharedpref" path="ui_settings.xml" /> -->
</full-backup-content>
